<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>投稿</th>
      <th>いいね数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to end_user_path(post.end_user.id) do %>
          <%= image_tag post.end_user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
        <td><%= post.body %></td>
        <td><%= post.favorites.count %></td>

        <td class=<%= "favorite-" + post.id.to_s %> >
            <%= render "public/favorites/btn", post: post %>
        </td>
        <td><%= render "public/post_comments/counter", post: post %></td>
      </tr>
    <% end %>
  </tbody>
</table>