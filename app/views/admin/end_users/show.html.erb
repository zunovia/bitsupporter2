<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
  <tr><%= image_tag @end_user.get_profile_image(100,100) %></tr>
  <tr>
	  <th>name</th>
	  <th><%= @end_user.name %></th>
  </tr>
  <tr>
	  <th>disorder</th>
	  <th><%= @end_user.disorder %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @end_user.express %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to @end_user.followings.count, end_user_followings_path(@end_user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to @end_user.followers.count, end_user_followers_path(@end_user) %></th>
  </tr>
</table>
</div>
      <h2 class="mt-3"></h2>
    </div>

<div class='col-md-8 offset-md-1'>
<h2>Posts</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
      <th></th>
      <th>タイトル</th>
      <th>投稿</th>
      <th>いいね数</th>
      <th>コメント数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to end_user_path(post.end_user.id) do %>
          <%= image_tag post.end_user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
        <td><%= post.body %></td>
        <td><%= post.favorites.count %></td>
        <td><%= render "public/post_comments/counter", post: post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
</div>
