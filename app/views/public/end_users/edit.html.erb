<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>会員情報</h2><br>

    <%= form_with model:@end_user, local:true do |f| %>
      <%= render 'layouts/errors', obj: @end_user %>
      <div class="form-group">
        <%= f.label :名前、ハンドルネーム%>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :画像 %>
        <%= f.file_field :profile_image, class: "form-control-file end_user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :社会に伝えたい事 %>
        <%= f.text_area :express, class: "form-control express" %>
      </div>
      <div class="form-group">
        <%= f.label :障害名（当事者以外なら家族、支援者と記入） %>
        <%= f.text_area :disorder, class: "form-control disorder" %>
      </div>
      <div class="form-group">
        <%= f.label :年代 %>
        <%= f.select :age, ['10代', '20代', '30代', '40代', '50代', '60代', '70代以上'], {include_blank: '選択ボックス'}, class: "form-control age" %>
      </div>
      <div class="form-group">
        <%= f.label :性別 %>
        <%= f.select :sex, ['男性', '女性', 'その他'], {include_blank: '選択ボックス'}, class: "form-control sex" %>
      </div>
      <div class="form-group">
        <%= f.label :お住まいの都道府県 %>
        <%= f.select :prefecture, ['北海道','青森県','岩手県','宮城県','秋田県','山形県','福島県','茨城県','栃木県','群馬県','埼玉県','千葉県','東京都','神奈川県','新潟県','富山県','石川県','福井県','山梨県','長野県','岐阜県','静岡県','愛知県','三重県','滋賀県','京都府','大阪府','兵庫県','奈良県','和歌山県','鳥取県','島根県','岡山県','広島県','山口県','徳島県','香川県','愛媛県','高知県','福岡県','佐賀県','長崎県','熊本県','大分県','宮崎県','鹿児島県','沖縄県'], {include_blank: '選択ボックス'},　class: "form-control prefecture" %>
      </div>
      <div class="form-group">
        <%= f.label :社会に望むもの %>
        <%= f.text_area :want, class: "form-control want" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "更新" ,class: 'btn btn-success' %>
      </div>

    <% end %>
  </div>
</div>
