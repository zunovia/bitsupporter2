<%= form_with model:post,local:true do |f| %>
  <div class="form-group">
    <%= f.label :タイトル %>
    <%= f.text_field :title, class: 'form-control post_title' %>
  </div>
  <div class="form-group">
    <%= f.label :投稿内容 %>
    <%= f.text_area :body, class: 'form-control post_body' %>
  </div>
  <div class="form-group">
    <%= f.submit "投稿する",  class: 'btn btn-success' %>
  </div>
<% end %>
