<table class='table table-hover table-inverse' border="2" bordercolor="white">
  <thead bgcolor="aqua">
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>AI感情分析<br>（-1:悪い、1:良い）</th>
      <th>わかる</th>
      <th>コメント</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td rowspan="2"><%= link_to end_user_path(post.end_user.id) do %>
          <%= image_tag post.end_user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to post.title,post,class: "post_#{post.id}" %></td>
        <td><p class="sentiment-score">スコア　[<%= post.score %>]</p></td>
        <td class=<%= "favorite-" + post.id.to_s %> >
            <%= render "public/favorites/btn", post: post %>
        </td>
        <td><%= render "public/post_comments/counter", post: post %></td>
      </tr>
      <tr><td colspan="4">【投稿内容】　<%= post.body %></td></tr>
    <% end %>
  </tbody>
</table>
<br><br><br><br>
